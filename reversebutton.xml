<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ui.buttonrevers.MainActivity"

    android:background="@drawable/road"
    android:focusable="true"
    android:clickable="true"
    style="@style/Theme.Base">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;MARS G13!&quot;"
        android:textColor="#565e5e"
        android:textSize="32sp"
        android:id="@+id/textView"
        tools:ignore="HardcodedText" />
        androidbackground=@drawable/road"


    <Button
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/reversebutton"
        android:onClick="reverse"
        android:background="@drawable/reversebt"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:longClickable="false"
        android:clickable="true" />
        android:gravity="bottom"

</RelativeLayout>
